<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/list_background"
    android:layout_height="match_parent"
    tools:context=".activities.PetDetailsActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/whiteColor"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reports_headline_TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/pet_details"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/back_arrow_IV"
                android:padding="8dp"
                android:visibility="visible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/back_arrow" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/addNewEntry"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/oval"
        android:layout_below="@id/toolbar"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ADD NEW PETS"
            android:textColor="#fff"
            android:textSize="14sp"
            android:gravity="center"
            android:drawableRight="@drawable/ic_baseline_add_white"/>

    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/pet_info_CV"
            android:layout_below="@id/addNewEntry"
            android:background="@color/whiteColor"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/petname"/>

                <TextView
                    android:id="@+id/pet_nameTV"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grayColorCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tuffy (DOG,MALE,BEAGLE)"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/petParent"/>

                <TextView
                    android:id="@+id/pet_parentNameTV"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grayColorCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ashish Rawat (7894561230)"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    <View
        android:id="@+id/view_green_line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/pet_info_CV"
        android:background="@color/green_divider"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_green_line"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/hospitalization_surgeries"
                android:background="@drawable/reports_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/view_clinicVisits_IV"
                    android:layout_centerInParent="true"
                    android:src="@drawable/viewreports_icon"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="start"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black_color"
                    android:layout_centerInParent="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/report_clinicVisits_TV"
                    android:text="@string/clinicVisits"
                    android:layout_toRightOf="@id/view_clinicVisits_IV"/>


                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/report_clinicVisits_TV"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/view_clinicVisits_arrow"
                    android:layout_centerInParent="true"
                    android:src="@drawable/forward_arrow"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/reports_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/view_xrayReport_IV"
                    android:layout_centerInParent="true"
                    android:src="@drawable/viewreports_icon"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="start"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black_color"
                    android:layout_centerInParent="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/report_xrayReport_TV"
                    android:text="@string/xrayReport"
                    android:layout_toRightOf="@id/view_xrayReport_IV"/>


                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/report_xrayReport_TV"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/view_xrayReport_arrow"
                    android:layout_centerInParent="true"
                    android:src="@drawable/forward_arrow"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/reports_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/view_labTestReport_IV"
                    android:layout_centerInParent="true"
                    android:src="@drawable/viewreports_icon"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="start"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black_color"
                    android:layout_centerInParent="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/report_labTestReport_TV"
                    android:text="@string/labTestReport"
                    android:layout_toRightOf="@id/view_labTestReport_IV"/>


                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/report_labTestReport_TV"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/view_labTestReport_arrow"
                    android:layout_centerInParent="true"
                    android:src="@drawable/forward_arrow"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/reports_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/view_Hospitalization_IV"
                    android:layout_centerInParent="true"
                    android:src="@drawable/viewreports_icon"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="start"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black_color"
                    android:layout_centerInParent="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/report_Hospitalization_TV"
                    android:text="@string/Hospitalization"
                    android:layout_toRightOf="@id/view_Hospitalization_IV"/>


                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/report_Hospitalization_TV"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/view_Hospitalization_arrow"
                    android:layout_centerInParent="true"
                    android:src="@drawable/forward_arrow"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/clinics_visit"
                android:background="@drawable/reports_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/last_prescription_IV"
                    android:layout_centerInParent="true"
                    android:src="@drawable/last_prescription"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="start"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black_color"
                    android:layout_centerInParent="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/last_prescription_TV"
                    android:text="Last Prescription"
                    android:layout_toRightOf="@id/last_prescription_IV"/>


                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/last_prescription_TV"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/last_prescription_arrow"
                    android:layout_centerInParent="true"
                    android:src="@drawable/forward_arrow"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/recent_visits"
                android:background="@drawable/reports_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/recent_visits_IV"
                    android:layout_centerInParent="true"
                    android:src="@drawable/recent_visit"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="start"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black_color"
                    android:layout_centerInParent="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/recent_visits_TV"
                    android:text="@string/recentVisits"
                    android:layout_toRightOf="@id/recent_visits_IV"/>


                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/recent_visits_TV"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/recent_visits_arrow"
                    android:layout_centerInParent="true"
                    android:src="@drawable/forward_arrow"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/print_id_card"
                android:background="@drawable/reports_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/print_id_card_IV"
                    android:layout_centerInParent="true"
                    android:src="@drawable/print_id"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="start"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black_color"
                    android:layout_centerInParent="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/print_id_card_TV"
                    android:text="@string/printIdCard"
                    android:layout_toRightOf="@id/print_id_card_IV"/>


                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/print_id_card_TV"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/print_id_card_arrow"
                    android:layout_centerInParent="true"
                    android:src="@drawable/forward_arrow"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_history"
                android:background="@drawable/reports_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/view_history_IV"
                    android:layout_centerInParent="true"
                    android:src="@drawable/view_history"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="start"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/black_color"
                    android:layout_centerInParent="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_history_TV"
                    android:text="@string/view_history"
                    android:layout_toRightOf="@id/view_history_IV"/>


                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/view_history_TV"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/view_history_arrow"
                    android:layout_centerInParent="true"
                    android:src="@drawable/forward_arrow"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>





</RelativeLayout>