<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_grey"
        app:layout_constraintStart_toStartOf="parent">
        
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/gray_1"
            android:id="@+id/vet_name_TV"
            android:text="Vet Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/reason_TV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:layout_width="wrap_content"
            android:text=":"
            android:id="@+id/vet_name_dot_TV"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/gray_1"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/vet_name_TV"
            app:layout_constraintTop_toTopOf="@id/vet_name_TV"
            app:layout_constraintBottom_toBottomOf="@id/vet_name_TV"/>


        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/vetName_TV"
            android:text="Monika Rawsdf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/gray_1"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vet_name_dot_TV"
            app:layout_constraintTop_toTopOf="@id/vet_name_TV"/>


        <TextView
            android:id="@+id/visit_date_TV"
            android:text="Visit Date"
            android:layout_width="0dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/gray_1"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/reason_TV"
            app:layout_constraintStart_toStartOf="@+id/vet_name_TV"
            app:layout_constraintTop_toBottomOf="@id/vetName_TV"/>


        <TextView
            android:layout_width="wrap_content"
            android:text=":"
            android:id="@+id/visit_date_dot_TV"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/gray_1"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toEndOf="@id/visit_date_TV"
            app:layout_constraintTop_toTopOf="@id/visit_date_TV"
            app:layout_constraintBottom_toBottomOf="@id/visit_date_TV"/>


        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/vet_visit_date_TV"
            android:text="Monika Rawat"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/gray_1"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/visit_date_dot_TV"
            app:layout_constraintTop_toTopOf="@id/visit_date_TV"/>

        <TextView
            android:id="@+id/reason_TV"
            android:text="Reason of Visit "
            android:layout_width="0dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/gray_1"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/vet_name_TV"
            app:layout_constraintTop_toBottomOf="@id/vet_visit_date_TV"/>


        <TextView
            android:layout_width="wrap_content"
            android:text=":"
            android:id="@+id/reason_visit_dot_TV"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/gray_1"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/reason_TV"
            app:layout_constraintTop_toTopOf="@id/reason_TV"
            app:layout_constraintBottom_toBottomOf="@id/reason_TV"/>


        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/reason_of_visit_TV"
            android:text="Monika Rawat"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/gray_1"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/reason_visit_dot_TV"
            app:layout_constraintTop_toTopOf="@id/reason_TV"/>


        <View
            android:id="@+id/grey_line_view"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/gray_5"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reason_of_visit_TV"
            app:layout_constraintStart_toStartOf="parent"/>


        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/grey_line_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:gravity="end"
            android:id="@+id/view_report_LL"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="View Report"
                android:fontFamily="@font/nunito"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:layout_marginLeft="5dp"
                android:layout_height="16dp"
                android:src="@drawable/blue_forward_arrow"/>


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>
