<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/whiteColor"
        tools:ignore="MissingConstraints" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/update_prof_logo"/>


        <TextView
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/update_profile"
            android:gravity="center"
            android:textSize="25sp"/>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:fillViewport="false"
        android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/first_name_updt"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="45dp"
                android:hint="@string/firstName"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="50dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/last_name_updt"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="45dp"
                android:hint="@string/lastname"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_updt"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="45dp"
                android:hint="@string/email"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_updt"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="45dp"
                android:hint="@string/phoneNumber"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/address_updt"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="45dp"
                android:hint="@string/address"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="100dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Spinner
                android:id="@+id/country_spnr_updt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/state_spnr_updt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Spinner
                android:id="@+id/city_spnr_updt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/postal_code_updt"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:paddingRight="45dp"
                    android:hint="@string/postal_code"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/website_updt"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="45dp"
                android:hint="@string/website"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/social_media_url_updt"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="45dp"
                android:hint="@string/social_media_url"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registration_num_updt"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="45dp"
                android:hint="@string/vet_registration_number"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vet_qualification_updt"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="45dp"
                android:hint="@string/vet_qualification"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_height="100dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:weightSum="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/select_Category"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Select Category"
                android:textColor="#000"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/pet_category_updt"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Set Category"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/grayColorCode"
          android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/category_img_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/add_image"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/category_img_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/add_image"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/select_service_Category"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Select Services"
                android:textColor="#000"
                android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/service_category_updt"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:text="Set Services"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayColorCode"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/service_cat_img_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_image"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/service_cat_img_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_image"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/service_cat_img_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_image"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/service_cat_img_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_image"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/service_cat_img_five"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_image"
                    android:layout_weight="1"/>


            </LinearLayout>


        </LinearLayout>





        <Button
            android:textSize="25dp"
            android:textColor="@color/whiteColor"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:theme="@style/MatButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/update_profile"
            android:text="@string/updateProfile"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>