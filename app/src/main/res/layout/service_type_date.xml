<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/service_icon_LL"
        android:layout_width="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="30dp">
        <ImageView
            android:layout_gravity="top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/gromming_icon"
            android:id="@+id/image_service_IV"
            android:layout_width="32dp"
            app:layout_constraintBottom_toBottomOf="@id/service_data"
            android:layout_height="32dp"/>
    </LinearLayout>


    <TextView
        android:gravity="center_vertical"
        android:id="@+id/service_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/gray_1"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/service_icon_LL"
        app:layout_constraintTop_toTopOf="@id/service_icon_LL" />

</androidx.constraintlayout.widget.ConstraintLayout>
