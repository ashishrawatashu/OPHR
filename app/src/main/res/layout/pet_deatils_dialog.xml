<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/pet_details_dilog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">


        <LinearLayout
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/pet_information_LL"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/appoint_image_RL"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:background="@drawable/appointment_image_bg"
                app:layout_constraintBottom_toBottomOf="@id/parent_name_TV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/appointment_iamge_CV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="6dp">

                    <ImageView
                        android:id="@+id/pet_profile_image_IV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/dummy_dog_image" />


                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:text="Sensor"
                    android:id="@+id/pet_name_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/gray_2"
                    android:textSize="24sp" />




            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/cross_IV"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/cancel_cross"
            app:layout_constraintTop_toTopOf="@+id/pet_information_LL"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"/>


        <LinearLayout
            android:id="@+id/pet_breed_age_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL"
            app:layout_constraintTop_toBottomOf="@id/pet_information_LL">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/pet_breed_RL"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/light_yellow_bg"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/pet_breed"
                        android:visibility="visible" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/breed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/nunito"
                    android:gravity="top"
                    android:text="Breed"
                    android:textColor="@color/gray_3"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@id/pet_breed_RL"
                    app:layout_constraintTop_toTopOf="@id/pet_breed_RL" />

                <TextView
                    android:id="@+id/pet_breed_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="bottom"
                    android:textColor="@color/gray_1"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    app:layout_constraintStart_toStartOf="@id/breed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/breed"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/pet_age_RL"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pet_age_bg"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/pet_sex_icon"
                        android:visibility="visible" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/pet_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/nunito"
                    android:gravity="top"
                    android:text="Pet age"
                    android:textColor="@color/gray_3"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pet_age_RL"
                    app:layout_constraintTop_toTopOf="@id/pet_age_RL" />

                <TextView
                    android:id="@+id/pet_age_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="bottom"
                    android:textColor="@color/gray_1"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    app:layout_constraintTop_toBottomOf="@id/pet_age"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/pet_age" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/pet_id_sex_LL"
            android:layout_width="0dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL"
            app:layout_constraintTop_toBottomOf="@id/pet_breed_age_LL">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/pet_id_RL"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pet_id_diloag_bg"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/pet_id_icon"
                        android:visibility="visible" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/petid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/nunito"
                    android:gravity="top"
                    android:text="Pet ID"
                    android:textColor="@color/gray_3"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@id/pet_id_RL"
                    app:layout_constraintTop_toTopOf="@id/pet_id_RL" />

                <TextView
                    android:id="@+id/pet_id_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="bottom"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/gray_1"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/petid"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/petid"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/pet_sex_RL"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pet_sex_dilog_bg"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/pet_sex_white_icon"
                        android:visibility="visible" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/nunito"
                    android:gravity="top"
                    android:id="@+id/gender"
                    android:text="Gender"
                    android:textColor="@color/gray_3"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@id/pet_sex_RL"
                    app:layout_constraintTop_toTopOf="@id/pet_sex_RL" />

                <TextView
                    android:id="@+id/pet_gender_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="bottom"
                    android:textColor="@color/gray_1"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/gender"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pet_sex_RL" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>



        <TextView
            android:id="@+id/parent_details_TV"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintTop_toBottomOf="@id/pet_id_sex_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="Parent Details"
            android:textColor="@color/gray_2"
            android:textSize="24sp" />


        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:id="@+id/parent_name_RL"
            android:elevation="16dp"
            app:cardCornerRadius="6dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@id/parent_details_TV"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/pet_name_blue_bg"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:id="@+id/pet_parent_name_TV"
            app:layout_constraintTop_toTopOf="@id/parent_name_RL"
            app:layout_constraintStart_toEndOf="@id/parent_name_RL"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintBottom_toBottomOf="@id/parent_name_RL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/gray_1"
            android:textSize="15sp" />

        <androidx.cardview.widget.CardView
            android:elevation="16dp"
            android:layout_marginTop="8dp"
            android:id="@+id/parent_phone_RL"
            app:cardCornerRadius="6dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@id/parent_name_RL"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/phone_blue_bg"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/parent_phone_TV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/nunito"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/gray_1"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/parent_phone_RL"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/parent_phone_RL"
            app:layout_constraintTop_toTopOf="@id/parent_phone_RL"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="8dp"
            android:elevation="16dp"
            app:cardCornerRadius="6dp"
            android:id="@+id/parent_location_RL"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/parent_phone_RL"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/location_blue_bg"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/parent_address_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/gray_1"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/parent_location_RL"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/parent_location_RL"
            app:layout_constraintTop_toTopOf="@id/parent_location_RL"
            app:layout_constraintVertical_bias="0.0" />



    </androidx.constraintlayout.widget.ConstraintLayout>




</RelativeLayout>