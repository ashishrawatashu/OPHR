<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteColor"
    android:layout_marginBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="5dp"
        android:id="@+id/pet_image_CIV"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/dummy_dog_image"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:textSize="14sp"
        android:id="@+id/pet_name_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pet_image_CIV"
        app:layout_constraintTop_toTopOf="@id/pet_image_CIV"
        android:layout_marginLeft="10dp"
        android:text="FaceBook (Male)"
        android:fontFamily="@font/nunito"
        android:textColor="@color/gray_1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:textSize="12sp"
        android:id="@+id/pet_reg__id_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pet_image_CIV"
        app:layout_constraintTop_toBottomOf="@id/pet_name_TV"
        android:layout_marginLeft="10dp"
        android:text="PETO-1512_5522"
        android:fontFamily="@font/nunito"
        android:textColor="@color/gray_2"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>