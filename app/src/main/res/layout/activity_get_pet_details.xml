<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GetPetDetailsActivity">

    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/whiteColor"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/regiter_pet_headline_TV"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/pet_details"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/id_card"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="match_parent"
                    android:src="@drawable/certificate" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/peto_details_reg_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/grayColorCodeLight"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textStyle="bold"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/peto_details_reg_number"
        android:fillViewport="false"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/add_details_pet_type"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pet_details_name_layout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pet_details_name"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:paddingRight="45dp"
                    android:hint="Pet Name *"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/add_details_pet_age"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/add_details_pet_sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/add_details_pet_breed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/add_detils_pet_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/add_details_pet_size"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Pet Birthday"
                android:textColor="@color/colorPrimary"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grayColorCode"
                android:layout_marginTop="5dp"/>


            <TextView
                android:id="@+id/calenderTextViewDetails"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp"
                android:gravity="center"
                android:hint="12/05/2020"
                android:drawableLeft="@drawable/calendar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Pet Profile Image"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center|left"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayColorCode"
                    android:layout_marginTop="5dp"/>

                <ImageView
                    android:id="@+id/pet_Details_profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_image"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pet_Details_parent_name_layout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pet_details_parent_name"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:paddingRight="45dp"
                    android:hint="Pet Parent Name *"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pet_details_contact_number_layout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pet_deatils_contact_number"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:paddingRight="45dp"
                    android:hint="Pet Contact Number *"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pet_details_description_layout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pet_deatils_description"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:paddingRight="45dp"
                    android:hint="Pet Description *"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pet_deatils_address_layout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pet_details_address"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:paddingRight="45dp"
                    android:hint="Pet Address *"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Pet  Images"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayColorCode"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/service_details_cat_img_one"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_image"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/service_details_cat_img_two"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_image"
                        android:layout_weight="1"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/service_details_cat_img_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_image"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/service_details_cat_img_four"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_image"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/service_detils_cat_img_five"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_image"
                        android:layout_weight="1"/>


                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/pet_update"
                android:textSize="25dp"
                android:textColor="@color/whiteColor"
                android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:theme="@style/MatButton"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="SUBMIT"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>