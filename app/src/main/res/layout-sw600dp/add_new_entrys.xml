<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor">

    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/whiteColor"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/regiter_pet_headline_TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/add_pet"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/peto_reg_number_dialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/grayColorCodeLight"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textStyle="bold"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/peto_reg_number_dialog"
        android:fillViewport="false"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/add_pet_type_dialog"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pet_name_layout_dialog"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pet_name_dialog"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:paddingRight="45dp"
                    android:hint="Pet Name *"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/add_pet_age_dialog"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/add_pet_sex_dialog"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/add_pet_breed_dialog"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/add_pet_color_dialog"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/add_pet_size_dialog"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Pet Birthday"
                android:textColor="@color/colorPrimary"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grayColorCode"
                android:layout_marginTop="5dp"/>


            <TextView
                android:id="@+id/calenderTextView_dialog"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp"
                android:gravity="center"
                android:hint="12/05/2020"
                android:drawableLeft="@drawable/calendar"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pet_parent_name_layout_dialog"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pet_parent_name_dialog"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:paddingRight="45dp"
                    android:hint="Pet Parent Name *"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pet_contact_number_layout_dialog"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pet_contact_number_dialog"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:paddingRight="45dp"
                    android:hint="Pet Contact Number *"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:theme="@style/MatButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:textColor="@color/whiteColor"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/save_changes_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".99"
            android:background="@color/colorPrimary"
            android:text="save changes"
            android:textSize="18sp"/>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"/>


        <Button
            android:id="@+id/cancel_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".99"
            android:background="@color/colorPrimary"
            android:text="CANCEL"
            android:textSize="18sp"/>


    </LinearLayout>

</RelativeLayout>